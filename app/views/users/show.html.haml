.wrapper
  .header
    %nav
      .nav-wrapper.yellow.darken-4
        %a.brand-logo{href: root_path}<
          Blog
        %ul.right.hide-on-med-and-down#nav-mobile
          - if user_signed_in?
            %li<
              = link_to "My Page", "/users/#{current_user.id}"
            %li<
              = link_to "New Post", new_post_path
            %li<
              = link_to "Sign Out", destroy_user_session_path, method: :delete
          - else
            %li<
              = link_to "Sign In", new_user_session_path, method: :get
            %li<
              = link_to "Sign Up", new_user_registration_path, method: :get

  .body.yellow.transparent
    .card-content.gray-text
      %span
        = @nickname
        さんの投稿一覧
    - @posts.each do |post|
      = render partial: "./posts/post", locals: { post: post}
    .row
      .col.s12.m6
        = paginate(@posts)
