.wrapper
  .header
    = render partial: "header"
  .body.transparent
    .row
      .col.s12.m6
        = form_for@post do |f|
          .card.teal.lighten-5
            .card-content.gray-text
              %h2<
                投稿の編集
              = f.text_field :title, placeholder: "title"
              = f.text_area :body, placeholder: "text"
              %a.waves-effect.waves-light.btn.red.lighten-2
                = f.submit "SENT"
