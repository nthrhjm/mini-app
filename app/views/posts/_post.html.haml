.row
  .col.s12.m6
    .card.teal.lighten-5.lighten-5
      .card-content.gray-text
        %span.card-title<
          = post.title
        %div
          = simple_format(post.body)
        %span.sender-name
          %span<
            投稿者
          #{post.user.nickname}
        .btns
          - if user_signed_in? && current_user.id == post.user_id
            .card-action
              = link_to '編集', "/posts/#{post.id}/edit", method: :get
            .card-action
              = link_to '削除', "/posts/#{post.id}", method: :delete
